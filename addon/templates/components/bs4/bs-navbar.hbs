{{#if this.fluid}}
  {{yield
    (hash
      toggle=(component this.toggleComponent onClick=(action "toggleNavbar") collapsed=this._collapsed)
      content=(component this.contentComponent collapsed=this._collapsed onHidden=this.onCollapsed onShown=this.onExpanded)
      nav=(component
        this.navComponent
        linkToComponent=(component this.linkToComponent onCollapse=(action "collapse"))
      )
      collapse=(action "collapse")
      expand=(action "expand")
      toggleNavbar=(action "toggleNavbar")
    )
  }}
{{else}}
  <div class="container">
    {{yield
      (hash
        toggle=(component this.toggleComponent onClick=(action "toggleNavbar") collapsed=this._collapsed)
        content=(component this.contentComponent collapsed=this._collapsed onHidden=this.onCollapsed onShown=this.onExpanded)
        nav=(component
          this.navComponent
          linkToComponent=(component this.linkToComponent onCollapse=(action "collapse"))
        )
        collapse=(action "collapse")
        expand=(action "expand")
        toggleNavbar=(action "toggleNavbar")
      )
    }}
  </div>
{{/if}}
